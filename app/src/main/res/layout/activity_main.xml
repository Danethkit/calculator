<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:onClick="chooseA"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/num2"/>
    <TextView
            android:layout_width="310dp"
            android:layout_height="96dp"
            android:id="@+id/result"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="156dp" app:layout_constraintTop_toBottomOf="@+id/num2"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:hint="num1"
            android:ems="10"
            android:id="@+id/num1" android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="104dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="137dp"
            android:layout_height="56dp"
            android:inputType="number"
            android:hint="num2"
            android:ems="10"
            android:id="@+id/num2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/num1" android:layout_marginStart="108dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset" app:layout_constraintStart_toEndOf="@+id/submit"
            android:layout_marginStart="112dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/num2" android:onClick="chooseA"/>

</android.support.constraint.ConstraintLayout>